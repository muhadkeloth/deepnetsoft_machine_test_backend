{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", 
    "strict": true,                                      
    "esModuleInterop": true,                     
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,        
    "outDir": "./dist", 
    "rootDir": "./src",  
    "typeRoots": ["./node_modules/@types"]                       
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
